<Window x:Class="NotVineApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NotVineApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:NotVineAppGUI.RegionPageView.Views;assembly=NotVineAppGUI.RegionPageView"
        xmlns:vm="clr-namespace:NotVineAppGUI.RegionPageView.ViewModels;assembly=NotVineAppGUI.RegionPageView"
        Title="MainWindow"
        Width="1280"
        Height="720"
        mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainPageViewModel}" />
        <DataTemplate DataType="{x:Type vm:AuthPageViewModel}">
            <views:AuthPageView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl x:Name="MainRegion"
                        Content="{Binding CurrentPageViewModel}" />
    </Grid>
</Window>
