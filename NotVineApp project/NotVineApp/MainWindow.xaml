<Window x:Class="NotVineApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:settings="clr-namespace:NotVineApp.Common.Settings;assembly=NotVineApp.Common"
        xmlns:utils="clr-namespace:NotVineApp.Common.Utils;assembly=NotVineApp.Common"
        Title="NotVine App"
        Width="1280"
        Height="720"
        Background="{x:Null}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="2"
                      GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="3" />
    </WindowChrome.WindowChrome>

    <Grid MouseDown="Border_MouseDown">
        <ContentControl utils:RegionManager.RegionName="{x:Static settings:Regions.MainRegion}" />
    </Grid>
</Window>