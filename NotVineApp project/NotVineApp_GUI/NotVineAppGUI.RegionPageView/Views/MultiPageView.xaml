<UserControl x:Class="NotVineAppGUI.RegionPageView.Views.MultiPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NotVineAppGUI.RegionPageView.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:NotVineApp.Common.Settings;assembly=NotVineApp.Common"
             xmlns:utils="clr-namespace:NotVineApp.Common.Utils;assembly=NotVineApp.Common"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="BackgroundGridStyle"
               TargetType="Grid">
            <Setter Property="Background">

                <Setter.Value>
                    <ImageBrush ImageSource="/NotVineApp.Common;component/Images/Background.png" />
                </Setter.Value>

            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid Style="{StaticResource BackgroundGridStyle}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0"
                        utils:RegionManager.RegionName="{x:Static settings:Regions.NavRegion}" />
        <ContentControl Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0"
                                utils:RegionManager.RegionName="{x:Static settings:Regions.ReportRegion}" />
                <ContentControl Grid.Column="1"
                                utils:RegionManager.RegionName="{x:Static settings:Regions.SelfTestRegion}" />
                <ContentControl Grid.Column="2"
                                utils:RegionManager.RegionName="{x:Static settings:Regions.UserRegion}" />
            </Grid>
        </ContentControl>

    </Grid>
</UserControl>
