<UserControl x:Class="NotVineAppGUI.RegionPageView.Views.AuthPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="clr-namespace:NotVineAppGUI.LoginModule.Views;assembly=NotVineAppGUI.LoginModule"
             xmlns:vm="clr-namespace:NotVineAppGUI.LoginModule.ViewModels;assembly=NotVineAppGUI.LoginModule"
             mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:LoginFormViewModel}">
            <view:LoginFormView />
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <ContentControl x:Name="LoginFormRegion"
                        Content="{Binding CurrentViewModel}" />
    </Grid>
</UserControl>
