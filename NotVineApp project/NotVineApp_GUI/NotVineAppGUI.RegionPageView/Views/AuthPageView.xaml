<UserControl x:Class="NotVineAppGUI.RegionPageView.Views.AuthPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:NotVineApp.Common.Settings;assembly=NotVineApp.Common"
             xmlns:utils="clr-namespace:NotVineApp.Common.Utils;assembly=NotVineApp.Common"
             xmlns:view="clr-namespace:NotVineAppGUI.LoginModule.Views;assembly=NotVineAppGUI.LoginModule"
             xmlns:vm="clr-namespace:NotVineAppGUI.LoginModule.ViewModels;assembly=NotVineAppGUI.LoginModule"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="BackgroundGridStyle"
               TargetType="Grid">

            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/NotVineApp.Common;component/Images/Background.png" />
                </Setter.Value>
            </Setter>

        </Style>

        <Style x:Key="LoginFormRegionStyle"
               TargetType="ContentControl">
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>

    </UserControl.Resources>

    <Grid Style="{StaticResource BackgroundGridStyle}">
        <ContentControl Grid.Row="0"
                        utils:RegionManager.RegionName="{x:Static settings:Regions.LoginFormRegion}"
                        Style="{StaticResource LoginFormRegionStyle}" />

    </Grid>


</UserControl>
