<UserControl x:Class="NotVineAppGUI.RegionPageView.Views.ReportPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NotVineAppGUI.RegionPageView.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:NotVineApp.Common.Settings;assembly=NotVineApp.Common"
             xmlns:utils="clr-namespace:NotVineApp.Common.Utils;assembly=NotVineApp.Common"
             mc:Ignorable="d">

    <UserControl.Resources>

        <Style x:Key="SelfTestRegionStyle"
               TargetType="ContentControl">
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>

        <Style x:Key="BackgroundGridStyle"
               TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                        <GradientStop Offset="0.0" Color="#00a6ec" />
                        <GradientStop Offset="1.0" Color="white" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Style="{StaticResource BackgroundGridStyle}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0"
                        utils:RegionManager.RegionName="{x:Static settings:Regions.NavRegion}" />
        <ContentControl Grid.Row="1"
                        utils:RegionManager.RegionName="{x:Static settings:Regions.ReportRegion}" />

    </Grid>
</UserControl>
