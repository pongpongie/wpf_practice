<UserControl x:Class="NotVineAppGUI.RegionPageView.Views.HomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NotVineAppGUI.RegionPageView.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:NotVineAppGUI.HomeModule.Views;assembly=NotVineAppGUI.HomeModule"
             xmlns:vm="clr-namespace:NotVineAppGUI.HomeModule.ViewModels;assembly=NotVineAppGUI.HomeModule"
             mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>

        <Style x:Key="HomeRegionStyle"
               TargetType="ContentControl">
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid Background="LightGreen">
        <ContentControl x:Name="HomeRegion"
                        Content="{Binding CurrentViewModel}"
                        Style="{StaticResource HomeRegionStyle}" />
    </Grid>
</UserControl>
