<UserControl x:Class="NotVineAppGUI.LoginModule.Views.LoginFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NotVineAppGUI.LoginModule.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>

        <SolidColorBrush x:Key="InputNormalBorderBrush"
                         Color="#e5e7eb" />
        <SolidColorBrush x:Key="InputHoverBorderBrush"
                         Color="#00a6ec" />
        <Color x:Key="InputNormalBorderColor">#E5E7EB</Color>
        <Color x:Key="InputHoverBorderColor">#00A6EC</Color>

        <Style x:Key="BorderStyle"
               TargetType="Border">
            <Setter Property="MinHeight"
                    Value="400" />
            <Setter Property="MinWidth"
                    Value="300" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="4" />
            <Setter Property="CornerRadius"
                    Value="25" />
            <Setter Property="Background"
                    Value="#ffffff" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="Black" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                             To="0.5"
                                             Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                             To="0"
                                             Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBlockStyle"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="TextAlignment"
                    Value="left" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="5,5" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="MaxWidth"
                    Value="240" />
            <Setter Property="FontFamily"
                    Value="Pretendard" />
        </Style>

        <Style x:Key="InputBorderStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="#e5e7eb" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="CornerRadius"
                    Value="8" />
            <Setter Property="Padding"
                    Value="5,2" />
            <Setter Property="Width"
                    Value="250" />

            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="{StaticResource InputHoverBorderBrush}" />
                    <Setter Property="BorderThickness"
                            Value="3" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LoginInputBoxStyle"
               TargetType="TextBox">
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>

        <Style x:Key="LoginInputPasswordBoxStyle"
               TargetType="PasswordBox">
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>

        <Style x:Key="ButtonStyle"
               TargetType="Button">
            <Setter Property="BorderBrush"
                    Value="#00a6ec" />
            <Setter Property="BorderThickness"
                    Value="2" />
        </Style>

        <Style x:Key="AnimatedLoginButtonBorderStyle"
               BasedOn="{StaticResource InputBorderStyle}"
               TargetType="Border">

            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                            To="{StaticResource InputHoverBorderColor}"
                                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                            To="{StaticResource InputNormalBorderColor}"
                                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border Style="{StaticResource BorderStyle}" />

        <StackPanel>

            <Grid Height="105"
                  MaxWidth="240"
                  HorizontalAlignment="Stretch">
                <TextBlock VerticalAlignment="Center"
                           d:Text="로그인하세요 제발"
                           FontSize="20"
                           Foreground="Black"
                           Text="{Binding TextBoxText}"
                           TextAlignment="Center" />
            </Grid>
            <TextBlock Style="{StaticResource TextBlockStyle}"
                       Text="아이디" />

            <Border Style="{StaticResource InputBorderStyle}">
                <TextBox x:Name="IdTextBox"
                         Style="{StaticResource LoginInputBoxStyle}" />
            </Border>


            <TextBlock Style="{StaticResource TextBlockStyle}"
                       Text="비밀번호" />
            <Border Style="{StaticResource InputBorderStyle}">
                <PasswordBox x:Name="PasswordInput"
                             Style="{StaticResource LoginInputPasswordBoxStyle}" />
            </Border>

            <Border Width="100"
                    Margin="0,30,0,0"
                    Style="{StaticResource AnimatedLoginButtonBorderStyle}">

                <Button VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding ClickCommand}"
                        Content="로그인">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="1">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="Transparent" />
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                    <Setter TargetName="border"
                                            Property="Opacity"
                                            Value="0.7" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>

        </StackPanel>
    </Grid>


</UserControl>