<UserControl x:Class="NotVineAppGUI.LoginModule.Views.LoginFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NotVineAppGUI.LoginModule.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="BorderStyle"
               TargetType="Border">
            <Setter Property="MinHeight"
                    Value="400" />
            <Setter Property="MinWidth"
                    Value="300" />
            <Setter Property="BorderBrush"
                    Value="#023291" />
            <Setter Property="BorderThickness"
                    Value="4" />
            <Setter Property="CornerRadius"
                    Value="10" />
            <Setter Property="Background"
                    Value="#001984" />
        </Style>

        <Style x:Key="TextBlockStyle"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="TextAlignment"
                    Value="left" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="5,5" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="MaxWidth"
                    Value="240" />
            <Setter Property="FontFamily"
                    Value="Pretendard" />
        </Style>

        <Style x:Key="InputBorderStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="#023291" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="CornerRadius"
                    Value="8" />
            <Setter Property="Padding"
                    Value="5,2" />
            <Setter Property="Width"
                    Value="250" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="#00a6ec" />
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="#00a6ec" />
                    <Setter Property="BorderThickness"
                            Value="3" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LoginInputBoxStyle"
               TargetType="TextBox">
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>

        <Style x:Key="LoginInputPasswordBoxStyle"
               TargetType="PasswordBox">
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>

        <Style x:Key="ButtonStyle"
               TargetType="Button">
            <Setter Property="BorderBrush"
                    Value="#00a6ec" />
            <Setter Property="BorderThickness"
                    Value="2" />
        </Style>

    </UserControl.Resources>

    <Border Style="{StaticResource BorderStyle}">

        <StackPanel>

            <Grid Height="105"
                  MaxWidth="240"
                  HorizontalAlignment="Stretch">
                <TextBlock VerticalAlignment="Center"
                           d:Text="로그인하세요 제발"
                           FontSize="20"
                           Text="{Binding TextBoxText}"
                           TextAlignment="Center" />
            </Grid>
            <TextBlock Style="{StaticResource TextBlockStyle}"
                       Text="아이디" />

            <Border Style="{StaticResource InputBorderStyle}">
                <TextBox x:Name="IdTextBox"
                         Style="{StaticResource LoginInputBoxStyle}" />
            </Border>


            <TextBlock Style="{StaticResource TextBlockStyle}"
                       Text="비밀번호" />
            <Border Style="{StaticResource InputBorderStyle}">
                <PasswordBox x:Name="PasswordInput"
                             Style="{StaticResource LoginInputPasswordBoxStyle}" />
            </Border>

            <Button Width="100"
                    Height="30"
                    Margin="0,30,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding ClickCommand}"
                    Content="로그인"
                    Style="{StaticResource ButtonStyle}" />

        </StackPanel>

    </Border>

</UserControl>