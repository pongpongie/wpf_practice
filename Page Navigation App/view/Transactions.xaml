<UserControl x:Class="Page_Navigation_App.view.Transactions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Page_Navigation_App.viewmodel"
             d:DesignHeight="600"
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:TransactionsVM />
    </UserControl.DataContext>
    <Grid>
        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/images/transaction_page.png"
                            Stretch="None" />
            </Border.Background>
        </Border>

        <Grid>
            <TextBlock Margin="0,315,160,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontFamily="/fonts/#Rubik Medium"
                       FontSize="12"
                       Foreground="#DBDBDB"
                       Text="Payment Amount :" />

            <TextBlock Margin="0,315,98,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontFamily="/fonts/#Rubik Medium"
                       FontSize="12"
                       Foreground="#CED565"
                       Text="{Binding TransactionAmount, StringFormat='{}{0:C}'}" />
        </Grid>
    </Grid>
</UserControl>
