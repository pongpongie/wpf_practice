<Window x:Class="Page_Navigation_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Menu="clr-namespace:Page_Navigation_App.utilities"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Page_Navigation_App.viewmodel"
        Title="MainWindow"
        Width="850"
        Height="600"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Window.DataContext>
        <vm:NavigationVM />
    </Window.DataContext>

    <Grid>

        <!--  window border  -->

        <Border Background="#212529"
                CornerRadius="20" />

        <Grid>
            <!--  Base grid  -->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="228" />
                <ColumnDefinition Width="622" />
            </Grid.ColumnDefinitions>

            <!--  Navigation Panel  -->

            <Grid Width="228"
                  HorizontalAlignment="Left">

                <Border Background="#272B2F"
                        CornerRadius="20,0,0,20" />

                <StackPanel Width="228"
                            Height="400">

                    <!--  home  -->

                    <Menu:Btn Command="{Binding HomeCommand}"
                              IsChecked="True"
                              Style="{StaticResource BtnStyle}">
                        <Grid>
                            <Image Source="/images/img_home.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Style="{StaticResource Text_Style}"
                                       Text="Home" />
                        </Grid>

                    </Menu:Btn>

                    <!--  Customers  -->
                    <Menu:Btn Command="{Binding CustomersCommand}"
                              Style="{StaticResource BtnStyle}">
                        <Grid>
                            <Image Source="/images/img_customer.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Style="{StaticResource Text_Style}"
                                       Text="Customer" />
                        </Grid>

                    </Menu:Btn>

                    <!--  Products  -->

                    <Menu:Btn Command="{Binding ProductsCommand}"
                              Style="{StaticResource BtnStyle}">
                        <Grid>
                            <Image Source="/images/img_product.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Style="{StaticResource Text_Style}"
                                       Text="Products" />
                        </Grid>
                    </Menu:Btn>

                    <!--  Orders  -->

                    <Menu:Btn Command="{Binding OrdersCommand}"
                              Style="{StaticResource BtnStyle}">

                        <Grid>

                            <Image Source="/images/img_order.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Style="{StaticResource Text_Style}"
                                       Text="Orders" />
                        </Grid>

                    </Menu:Btn>

                    <!--  Transactions  -->

                    <Menu:Btn Command="{Binding TransactionsCommand}"
                              Style="{StaticResource BtnStyle}">

                        <Grid>

                            <Image Source="/images/img_transaction.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Style="{StaticResource Text_Style}"
                                       Text="Transactions" />

                        </Grid>

                    </Menu:Btn>

                    <!--  Shipments  -->

                    <Menu:Btn Command="{Binding ShipmentsCommand}"
                              Style="{StaticResource BtnStyle}">

                        <Grid>

                            <Image Source="/images/img_shipment.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Style="{StaticResource Text_Style}"
                                       Text="Shipments" />

                        </Grid>

                    </Menu:Btn>

                    <!--  Settings  -->

                    <Menu:Btn Command="{Binding SettingsCommand}"
                              Style="{StaticResource BtnStyle}">

                        <Grid>

                            <Image Source="/images/img_setting.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Style="{StaticResource Text_Style}"
                                       Text="Settings" />

                        </Grid>

                    </Menu:Btn>

                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}" />
            </Grid>

        </Grid>

        <Button x:Name="CloseApp"
                Click="CloseApp_Click"
                Style="{StaticResource ExitApp}" />
    </Grid>

</Window>
